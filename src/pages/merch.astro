---
import Layout from "../layouts/Layout.astro";
import MerchStore from "../components/islands/MerchStore.jsx";
import "../styles/global.css";
---

<Layout title="Tienda | AstroTickets – Galactic Force Fest">
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-3xl md:text-4xl font-bold text-yellow-300 mb-8">
      Tienda Oficial
    </h1>

    <p class="text-slate-300 mb-8 max-w-2xl">
      Productos oficiales del Galactic Force Fest. Añade artículos al carrito y se guardarán
      automáticamente gracias a la Fuerza… o al localStorage.
    </p>

    <!-- Isla React -->
    <MerchStore client:load />
  </section>
</Layout>
