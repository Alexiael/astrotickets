---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

// -------------------------------------------------------
// 1. Descargar *todas* las páginas de SWAPI (personajes)
// -------------------------------------------------------
async function fetchAllPeople() {
  let url: string | null = "https://swapi.dev/api/people/?page=1";
  const all: any[] = [];

  while (url) {
    const res: any = await fetch(url);
    const data: any = await res.json();

    all.push(...data.results);
    url = data.next;
  }

  return all;
}

// -------------------------------------------------------
// 2. Obtener el nombre del planeta
// -------------------------------------------------------
async function getPlanetName(url: string) {
  try {
    const res = await fetch(url);
    const data = await res.json();
    return data.name as string;
  } catch {
    return "Desconocido";
  }
}

// -------------------------------------------------------
// 3. Imágenes oficiales del Databank
// -------------------------------------------------------
const characterImages: Record<string, string> = {
  "Luke Skywalker":
    "https://lumiere-a.akamaihd.net/v1/images/luke-skywalker-main_7ffe21c7.jpeg?region=130%2C147%2C1417%2C796",
  "Leia Organa":
    "https://lumiere-a.akamaihd.net/v1/images/leia-organa-main_9af6ff81.jpeg?region=187%2C157%2C1400%2C786",
  "Darth Vader":
    "https://lumiere-a.akamaihd.net/v1/images/darth-vader-main_4560aff7.jpeg?region=0%2C67%2C1280%2C720",
  "C-3PO":
    "https://lumiere-a.akamaihd.net/v1/images/c-3po-main_d6850e28.jpeg?region=176%2C0%2C951%2C536",
  "R2-D2":
    "https://lumiere-a.akamaihd.net/v1/images/r2-d2-main_f315b094.jpeg?region=273%2C0%2C951%2C536",
  "Owen Lars":
    "https://lumiere-a.akamaihd.net/v1/images/owen-lars-main_08c717c8.jpeg?region=0%2C34%2C1053%2C593",
};

// -------------------------------------------------------
const allPeople = await fetchAllPeople();
const selectedPeople = allPeople.slice(0, 6);

// -------------------------------------------------------
const peopleWithPlanets = await Promise.all(
  selectedPeople.map(async (p: any) => ({
    ...p,
    planet: await getPlanetName(p.homeworld),
    image:
      characterImages[p.name] ??
      "https://via.placeholder.com/600x400?text=Star+Wars",
  }))
);
---

<Layout title="Comunidad | AstroTickets – Galactic Force Fest">
  <section class="max-w-6xl mx-auto px-4 py-16">

    <h1 class="text-3xl md:text-4xl font-bold text-[color:var(--color-accent-soft)] mb-6">
      Comunidad Galáctica
    </h1>

    <p class="text-[color:var(--color-text-muted)] mb-10 max-w-2xl">
      Una muestra de algunos personajes icónicos de la saga Star Wars combinados con datos
      obtenidos desde la API pública SWAPI y con imágenes oficiales del Databank.
    </p>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      {peopleWithPlanets.map((person) => (
        <div
          class="border border-[color:var(--color-border-accent)] p-6 rounded-lg
                 bg-black/50 backdrop-blur shadow-lg"
        >

          <!-- Imagen del personaje -->
          <img
            src={person.image}
            alt={person.name}
            class="rounded-md w-full h-48 object-cover object-center mb-4
                   border border-[color:var(--color-border-accent)]"
          />

          <h3 class="text-[color:var(--color-accent)] text-xl font-semibold text-center mb-2">
            {person.name}
          </h3>

          <p class="text-sm text-center text-[color:var(--color-text-primary)]">
            <span class="text-[color:var(--color-text-muted)]">Género:</span> {person.gender}
          </p>

          <p class="text-sm text-center text-[color:var(--color-text-primary)]">
            <span class="text-[color:var(--color-text-muted)]">Nacimiento:</span> {person.birth_year}
          </p>

          <p class="text-sm text-center text-[color:var(--color-text-primary)] mb-3">
            <span class="text-[color:var(--color-text-muted)]">Planeta:</span> {person.planet}
          </p>

          <p class="text-xs text-center text-[color:var(--color-text-muted)]">
            Aparece en {person.films.length} película(s)
          </p>
        </div>
      ))}
    </div>
  </section>
</Layout>
