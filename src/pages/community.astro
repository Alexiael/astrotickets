import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

// -------------------------------------------------------
// TIPOS
// -------------------------------------------------------
type Person = {
  name: string;
  gender: string;
  birth_year: string;
  homeworld: string;
  films: string[];
};

// -------------------------------------------------------
// CONSTANTES
// -------------------------------------------------------
const SWAPI_MIRROR = "https://swapi.py4e.com/api";
const FALLBACK_IMAGE =
  "https://via.placeholder.com/600x400?text=Star+Wars";

// -------------------------------------------------------
// UTILIDAD: normalizar URLs al mirror
// -------------------------------------------------------
function toSwapiMirror(url: string): string {
  return url.replace("https://swapi.dev/api", SWAPI_MIRROR);
}

// -------------------------------------------------------
// 1. Descargar personajes desde SWAPI MIRROR
// -------------------------------------------------------
async function fetchAllPeople(): Promise<Person[]> {
  let url: string | null = `${SWAPI_MIRROR}/people/`;
  const all: Person[] = [];

  try {
    while (url) {
      const res = await fetch(url);

      if (!res.ok) {
        console.error("SWAPI mirror error:", res.status);
        break;
      }

      const data = (await res.json()) as {
        results: Person[];
        next: string | null;
      };

      all.push(...data.results);
      url = data.next;
    }
  } catch (error) {
    console.error("SWAPI fetch failed:", error);
  }

  return all;
}

// -------------------------------------------------------
// 2. Obtener nombre del planeta (usando mirror)
// -------------------------------------------------------
async function getPlanetName(url: string): Promise<string> {
  try {
    const res = await fetch(toSwapiMirror(url));
    const data = (await res.json()) as { name: string };
    return data.name;
  } catch {
    return "Desconocido";
  }
}

// -------------------------------------------------------
// 3. Imágenes oficiales
// -------------------------------------------------------
const characterImages: Record<string, string> = {
  "Luke Skywalker":
    "https://lumiere-a.akamaihd.net/v1/images/luke-skywalker-main_7ffe21c7.jpeg",
  "Leia Organa":
    "https://lumiere-a.akamaihd.net/v1/images/leia-organa-main_9af6ff81.jpeg",
  "Darth Vader":
    "https://lumiere-a.akamaihd.net/v1/images/darth-vader-main_4560aff7.jpeg",
  "C-3PO":
    "https://lumiere-a.akamaihd.net/v1/images/c-3po-main_d6850e28.jpeg",
  "R2-D2":
    "https://lumiere-a.akamaihd.net/v1/images/r2-d2-main_f315b094.jpeg",
  "Owen Lars":
    "https://lumiere-a.akamaihd.net/v1/images/owen-lars-main_08c717c8.jpeg",
};

// -------------------------------------------------------
// 4. Datos finales
// -------------------------------------------------------
const allPeople = await fetchAllPeople();
const selectedPeople = allPeople.slice(0, 6);

const peopleWithPlanets = await Promise.all(
  selectedPeople.map(async (p) => ({
    ...p,
    planet: p.homeworld
      ? await getPlanetName(p.homeworld)
      : "Desconocido",
    image: characterImages[p.name] ?? FALLBACK_IMAGE,
  }))
);
---

<Layout title="Comunidad | AstroTickets – Galactic Force Fest">
  <section class="max-w-6xl mx-auto px-4 py-16">

    <h1 class="text-3xl md:text-4xl font-bold mb-6 text-(--color-accent)">
      Comunidad Galáctica
    </h1>

    <p class="mb-10 max-w-2xl text-(--color-text-muted)">
      Personajes icónicos obtenidos desde la API pública SWAPI (mirror),
      combinados con imágenes oficiales del Databank.
    </p>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      {peopleWithPlanets.map((person) => (
        <div
          class="border border-(--color-border-accent)
                 p-6 rounded-lg bg-black/50 backdrop-blur shadow-lg"
        >
          <img
            src={person.image}
            alt={person.name}
            class="rounded-md w-full h-48 object-cover mb-4
                   border border-(--color-border-accent)"
          />

          <h3 class="text-xl font-semibold text-center mb-2 text-(--color-accent)">
            {person.name}
          </h3>

          <p class="text-sm text-center">
            <span class="text-(--color-text-muted)">Género:</span> {person.gender}
          </p>

          <p class="text-sm text-center">
            <span class="text-(--color-text-muted)">Nacimiento:</span> {person.birth_year}
          </p>

          <p class="text-sm text-center mb-3">
            <span class="text-(--color-text-muted)">Planeta:</span> {person.planet}
          </p>

          <p class="text-xs text-center text-(--color-text-muted)">
            Aparece en {person.films?.length ?? 0} película(s)
          </p>
        </div>
      ))}
    </div>

  </section>
</Layout>
